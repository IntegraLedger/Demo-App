        function setLMATType(){
            $('#idType').val("com.integraledger.lmat");
            $('#DocumentDataGroup').hide();
            $('#valueData').val("");

        }

        function setDocumentType(){
            $('#idType').val("com.integraledger.document");
            $('#DocumentDataGroup').show();
            $('#valueData').val("");

    clearResults();

